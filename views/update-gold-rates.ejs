<%- include('layouts/header.ejs') %>
<%- include('layouts/admin-nav.ejs') %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="container-full">
      <!-- Content Header (Page header) -->	  
      <div class="content-header">
          <div class="d-flex align-items-center">
              <div class="me-auto">
                  <h4 class="page-title">Update Gold Rates</h4>
                  <div class="d-inline-block align-items-center">
                      <nav>
                          <ol class="breadcrumb">
                              <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                              <li class="breadcrumb-item" aria-current="page">Update Gold Rates</li>
                          </ol>
                      </nav>
                  </div>
              </div>
              
          </div>
      </div>

      <!-- Main content -->
      <section class="content">
          <div class="row">
            <div class="col-lg-12 col-12">
                <div class="box">
                  <div class="box-header with-border">
                    <h4 class="box-title">Update Gold Rates</h4>
                  </div>
                  <!-- /.box-header -->
                  <form class="form"  onsubmit="return false;" id="form">
                      <div class="box-body">
                          <h4 class="box-title text-info mb-0"><i class="ti-user me-15"></i>Rates</h4>
                          <hr class="my-15">
                          <div class="row">
                            <div class="alert alert-success mt-2" role="alert" id="success" style="display: none;">
                       
                            </div>
                            <div class="alert alert-danger mt-2" role="alert" id="failed" style="display: none;">
                             
                            </div>
                            <div class="col-md-4">
                              <div class="form-group">
                                <label>22K Gold Price</label>
                            <input type="text" class="md-input label-fixed" id="gold_rate_22k" value="<%= rates.gold_rate_22k %>" required/>
                              </div>
                            </div>
                            <div class="col-md-4">
                              <div class="form-group">
                                <label>Old Gold Exchange Rate</label>
                                <input type="text" class="md-input label-fixed" id="old_gold_exchange_rate" value="<%= rates.old_gold_exchange_rate %>"  required/>
                              </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Gold Coin Price</label>
                                    <input type="text" class="md-input label-fixed" id="gold_coin_price" value="<%= rates.gold_coin_price %>" required/>
                                </div>
                            </div>
                            
                          </div>
                          <input type="hidden" class="md-input label-fixed" id="id" value="<%= rates.id %>"/>
                      </div>
                      <!-- /.box-body -->
                      <div class="box-footer">
                         
                          <button type="submit" class="btn btn-primary">
                            <i class="ti-save-alt"></i> Save
                          </button>
                      </div>  
                  </form>
                </div>
                <!-- /.box -->			
          </div>
          </div>
      </section>

    
    </div>
</div>
</div>
<script src="../custom-js/update-gold-rates.js"></script>
<%- include('layouts/footer.ejs') %>