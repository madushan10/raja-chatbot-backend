<%- include('layouts/header.ejs') %>
<%- include('layouts/admin-nav.ejs') %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="container-full">
      <!-- Content Header (Page header) -->	  
      <div class="content-header">
          <div class="d-flex align-items-center">
              <div class="me-auto">
                  <h4 class="page-title">Edit Admin</h4>
                  <div class="d-inline-block align-items-center">
                      <nav>
                          <ol class="breadcrumb">
                              <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                              <li class="breadcrumb-item" aria-current="page">Edit Admin</li>
                          </ol>
                      </nav>
                  </div>
              </div>
              
          </div>
      </div>

      <!-- Main content -->
      <section class="content">
          <div class="row">
            <div class="col-lg-12 col-12">
                <div class="box">
                  <div class="box-header with-border">
                    <h4 class="box-title">Edit Admin</h4>
                  </div>
                  <!-- /.box-header -->
                  <form class="form"  onsubmit="return false;" id="form">
                      <div class="box-body">
                          <h4 class="box-title text-info mb-0"><i class="ti-user me-15"></i>Admin Details</h4>
                          <hr class="my-15">
                          <div class="row">
                            <div class="alert alert-success mt-2" role="alert" id="success" style="display: none;">
                       
                            </div>
                            <div class="alert alert-danger mt-2" role="alert" id="failed" style="display: none;">
                             
                            </div>
                            <div class="col-md-4">
                              <div class="form-group">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" placeholder="Name" id="admin_name" value="<%= admin_details.name %>" required>
                              </div>
                            </div>
                            <div class="col-md-4">
                              <div class="form-group">
                                <label class="form-label">Phone Number</label>
                                <input type="text" class="form-control" placeholder="Phone Number" id="phone" value="<%= admin_details.phone %>" required>
                              </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                  <label class="form-label">Email</label>
                                  <input type="text" class="form-control" placeholder="Email" id="email" value="<%= login_details.email %>" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                  <label class="form-label">Current Password</label>
                                  <input type="password" class="form-control"  id="current_password" >
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                  <label class="form-label">New Password</label>
                                  <input type="password" class="form-control"  id="password" >
                                </div>
                                <p style="color:red;display: none;" id="password-error"></p>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                  <label class="form-label">Confirm Password</label>
                                  <input type="password" class="form-control"   id="confirm_password" >
                                </div>
                               
                            </div>
                          </div>
                          <input type="hidden" class="md-input label-fixed" id="user_id" value="<%= login_details.id %>"/>
                      </div>
                      <!-- /.box-body -->
                      <div class="box-footer">
                         
                          <button type="submit" class="btn btn-primary">
                            <i class="ti-save-alt"></i> Save
                          </button>
                      </div>  
                  </form>
                </div>
                <!-- /.box -->			
          </div>
          </div>
      </section>

    
    </div>
</div>
</div>
<script src="../custom-js/admin-edit.js"></script>
<%- include('layouts/footer.ejs') %>