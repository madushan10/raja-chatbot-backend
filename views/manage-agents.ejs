<%- include('layouts/header.ejs') %>
<%- include('layouts/admin-nav.ejs') %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="container-full">
      <!-- Content Header (Page header) -->	  
      <div class="content-header">
          <div class="d-flex align-items-center">
              <div class="me-auto">
                  <h4 class="page-title">Manage Agents</h4>
                  <div class="d-inline-block align-items-center">
                      <nav>
                          <ol class="breadcrumb">
                              <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                              <li class="breadcrumb-item" aria-current="page">Manage Agents</li>
                          </ol>
                      </nav>
                  </div>
              </div>
              
          </div>
      </div>

      <!-- Main content -->
      <section class="content">
          <div class="row">
              <div class="col-12">
                  <div class="box">
                      <div class="box-header with-border">
                        <h4 class="box-title">Agents</h4>
                      </div>
                      <div class="box-body">
                        <div class="table-responsive">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Phone</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (var i = 0; i < agents.length; i++) { %>
                                       
                                        <tr>
                                            <td><%= agents[i].name %></td>
                                            <td ><%= agents[i].phone %></td>
                                            <% if(agents[i].status == "active") { %>
                                            <td ><span class="badge badge-pill badge-success">Active</span></td>
                                            <% } else { %>
                                            <td ><span class="badge badge-pill badge-danger">Inactive</span></td>
                                            <% } %>
                                            <td class="">
                                                <div class="clearfix">
                                                    <a href="/edit-agent/<%= agents[i].user_id %>"><button type="button" class="waves-effect waves-light btn btn-info mb-5 btn-xs">Edit</button></a>
                                                    <a href="/deactivate-agent/<%= agents[i].user_id %>"><button type="button" class="waves-effect waves-light btn btn-danger mb-5 btn-xs">Deactivate</button></a>
                                                    <a href="/activate-agent/<%= agents[i].user_id %>"><button type="button" class="waves-effect waves-light btn btn-primary mb-5 btn-xs">Activate</button></a>
                                                </div>
                                                
                                            </td>
                                        </tr>
                                      <% } %>
                                    
                                   
                                </tbody>
                            </table>
                        </div>
                      </div>
                      <!-- /.box-body -->
                     
                  </div>
              </div>
          </div>
      </section>

    
    </div>
</div>
</div>

<%- include('layouts/footer.ejs') %>